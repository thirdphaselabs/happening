{
  "extends": "@plaventi/tsconfig/nextjs.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "plugins": [{ "name": "next" }],

    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "../../node_modules"]
}
