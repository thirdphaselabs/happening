generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PLAVENTI_ADMIN
  ORGANIZER_ADMIN
  ORGANIZER
  MEMBER
}


model Onboarding {
  id              Int      @id @default(autoincrement())
  clerkId         String   @unique
  firstName       String?
  lastName        String?
  role            String?
  userRole        UserRole @default(MEMBER)
  organisationId  Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  userRole  UserRole 
  clerkId   String   @unique
  createdAt DateTime @default(now())

  organisationId String
  organisation   Organisation @relation(fields: [organisationId], references: [clerkOrganisationId])
  events Event[]

  @@index([clerkId])
}

model Organisation {
  id                  Int      @id @default(autoincrement())
  clerkOrganisationId String   @unique
  name                String   
  createdAt           DateTime @default(now())
  domain              String   @unique

  users User[]
  events Event[]

  @@index([clerkOrganisationId])
}

model Event {
  id        String   @id @default(cuid())
  title     String   @unique
  createdAt DateTime @default(now())
  userId String
  user User @relation(fields: [userId], references: [clerkId])

  organisationId String
  organisation   Organisation @relation(fields: [organisationId], references: [clerkOrganisationId])
}

model Waitlist {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}